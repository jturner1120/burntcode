<container class="jumbotron">
  <div class="row flex-row">
    <div class="col-sm-3">
      <img src="/images/bclogo.png" class="img-responsive" title="It's Crispy">
    </div>
    <div class="col-sm-9 title-bar">
      <div class="title"><h1>BurntCode</h1></div>
      <div class="subtitle"><h2>Send me a message</h2></div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-1 col-sm-3">
      <h3></h3>
    </div>
    <div class="col-xs-10 col-sm-6 form-style">
      <form action="/resume/contact" method="post" id="contactform">
        <div class="form-group">
          <label for="contactname">Your Name</label><label class="hideme" id="nameinputerror"></label>
          <input type="text" class="form-control" id="contactname" placeholder="Your name goes here" name="username">
        </div>
        <div class="form-group">
          <label for="contactemail">Your email Adress</label><label class="hideme" id="emailinputerror"></label>
          <input type="text" class="form-control" id="contactemail" name="useremail" aria-describedby="assurance" placeholder="KingofQbs@Brady.com">
          <small id="assurance" class="form-text text-muted">Your email will only ever be used by me if you request a response.</small>
        </div>
        <div class="form-group">
          <label for="messagetext">Speak your mind</label><label class="hideme" id="textinputerror"></label>
          <textarea class="form-control text-area" id="messagetext" name="messagetext"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" id="submitmsg">Submit</button>
        <a href="/resume" class="btn btn-warning" title="Back to Resume">Forget It</a>
        <h4 id="messagearea"></h4>
      </form>
    </div>
    <div class="col-xs-1 col-sm-3 ad-col">
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <footer>
      </footer>
    </div>
  </div>
</container>
